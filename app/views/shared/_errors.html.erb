  <% if obj.errors.any? %>
    <div class="container alert alert-danger text-center col-10 alert-dismissible fade show" role="alert">
      <h4 class="text-center mt-4 alert-heading">The following errors prevented the <%= obj.class.name.downcase %> from being saved. </h4>
      <hr>
        <% obj.errors.full_messages.each do |msg| %>
          <p class=""><%= msg %></p>
        <% end %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

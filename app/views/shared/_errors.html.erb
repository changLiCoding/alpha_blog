  <% if @article.errors.any? %>
    <div class="container alert alert-danger text-center col-10 alert-dismissible fade show" role="alert">
      <h2 class="text-center mt-4 alert-heading">The following errors prevented the article from being saved. </h2>
      <hr>
        <% @article.errors.full_messages.each do |msg| %>
          <p class=""><%= msg %></p>
        <% end %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

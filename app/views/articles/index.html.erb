<h1 class="text-center mt-4">Articles listing page</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="fst-italic card-header">
            Created by Chang Li
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title.capitalize, article_path(article.id), {class: "text-success text-decoration-none"} %> </h5>
            <p class="card-text"><%= truncate(article.description.capitalize, length: 70) %></p>
            <%= link_to "View", article_path(article.id), method: :show, class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(article.id), method: :edit, class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(article.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>
              Created <%= time_ago_in_words(article.created_at) %> ago,
              edited <%= time_ago_in_words(article.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%
=begin%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title.capitalize %></td>
        <td><%= article.description.capitalize %></td>
        <td><%= link_to "Show", article_path(article.id), method: :show %></td>
        <td><%= link_to "Edit", edit_article_path(article.id), method: :edit %></td>
        <td><%= link_to "Delete", article_path(article.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%
=end%>

<br>
<p>
   <%= link_to "Naw Article", new_article_path, class: "btn btn-success" %>
</p>


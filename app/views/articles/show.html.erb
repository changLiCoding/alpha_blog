<h1>Showing article details</h1>

<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>




<%
=begin%>

  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-body rounded">
            <div class="fst-italic card-header">
              Created by Chang Li
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= simple_form(@article.title.capitalize), article_path(article.id), {class: "text-success text-decoration-none"} %> </h5>
              <p class="card-text"><%= truncate(article.description.capitalize, length: 70) %></p>
              <%= link_to "View", article_path(article.id), method: :show, class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_article_path(article.id), method: :edit, class: "btn btn-outline-info" %>
              <%= link_to "Delete", article_path(article.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-outline-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small>
                Created <%= time_ago_in_words(article.created_at) %> ago,
                edited <%= time_ago_in_words(article.updated_at) %> ago
              </small>
            </div>
          </div>
        </div>
      </div>
  </div>
<%
=end%>





<%= link_to "Edit", edit_article_path(@article.id) %> |
<%= link_to "Delete", article_path(@article.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %> |
<%= link_to "Return to Main", articles_path %> |

<%= link_to "New Article", new_article_path %>

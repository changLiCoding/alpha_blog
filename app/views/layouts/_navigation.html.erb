<header>
  <nav class="navbar navbar-expand-md customNav">
    <div class="container-fluid">
      <%= link_to "ALPHA BLOG",  root_path, {class: "navbar-brand", id: "logo"} %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Articles
            </a>
            <div class="dropdown-menu" aria-labelledby='navbarDropdown'>
              <% if logged_in? %>
                <%= link_to "New Article", new_article_path, {class: "dropdown-item"} %>
              <% end %>
              <%= link_to "All Articles", articles_path, {class: "dropdown-item"} %>

            </div>
          </li>

          <% if logged_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Profile <%= current_user.username.capitalize %>
              </a>
              <div class="dropdown-menu" aria-labelledby='navbarDropdown'>

                <%= link_to "View your profile", user_path(current_user), class: "dropdown-item" %>
                <%= link_to "Edit your profile", edit_user_path(current_user), class: "dropdown-item" %>
                <%= link_to "Delete your profile", user_path(current_user), class: "dropdown-item text-danger", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>

                <%= link_to "Logout", logout_path, class: "dropdown-item", data: {turbo_method: :delete, turbo_confirm:'Are you sure?'} %>
              </div>
            </li>


          <% else %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Profile
              </a>
              <div class="dropdown-menu" aria-labelledby='navbarDropdown'>

                <%= link_to "Login", login_path, {class: "dropdown-item"} %>
                <%= link_to "Sign Up", signup_path, {class: "dropdown-item"} %>

              </div>
            </li>
          <% end %>


          <li class="nav-item">
            <%= link_to "Show Bloggers", users_path, {class: "nav-link"} %>
          </li>

          <li class="nav-item">
            <%= link_to "About Us", about_path, {class: "nav-link"} %>
          </li>
        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
</header>


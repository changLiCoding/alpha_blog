<div class="container mt-3">
  <%= render "shared/errors", obj: @category %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @category, class: "shadow rounded p-3 mb-3 bg-info", local: true) do |f| %>
        <div class="row form-group mt-5">
            <%= f.label :name, "Category Name", {class: "col-2 col-form-label text-light"} %>
          <div class="col-10">
            <%= f.text_field :name, {class: "form-control shadow rounded", placeholder: "Please enter category name here. "} %>
          </div>
        </div>

        <div class="form-group mb-3 mt-4 text-center">
          <%= f.submit "Submit", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="container mb-5 mt-3 text-center">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info text-decoration-none" %>
    </div>
  </div>
</div>
